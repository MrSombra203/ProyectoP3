<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP3.MainPage"
             Title="Inicio">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <Label Text="Bienvenido a la App de Autos" FontSize="26" HorizontalOptions="Center" FontAttributes="Bold" TextColor="DarkBlue"/>
            <Label 
                Text="El mejor sitio para encontrar el auto de tus sueños!"
                FontSize="18" HorizontalOptions="Center" TextColor="DarkGray"/>

            <Frame
                HasShadow="True"
                CornerRadius="10"
                BorderColor="#ddd"
                BackgroundColor="White"
                Padding="0"
                Margin="0,10,0,10">
                <Image
                    Source="https://static.patiotuerca.com/ghost/ecuador/2023/02/Jetour-X70-Plus.jpg"
                    HeightRequest="250"
                    Aspect="AspectFill"
                    HorizontalOptions="FillAndExpand"
                    SemanticProperties.Description="Imagen ilustrativa de autos" />
            </Frame>

            <Label
                Text="Explora nuestras páginas para encontrar tu auto ideal."
                FontSize="16" TextColor="Gray" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
