<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP3.Views.NewPage1"
             Title="RegisterCarPage">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Marca" FontSize="Medium" />
        <Entry Placeholder="Ingresa la marca del auto" Text="{Binding Marca}" />

        <Label Text="Modelo" FontSize="Medium" />
        <Entry Placeholder="Ingresa el modelo del auto" Text="{Binding Modelo}" />

        <Label Text="Año" FontSize="Medium" />
        <Entry Placeholder="Ingresa el año del auto" Text="{Binding Anio}" Keyboard="Numeric" />

        <Label Text="Precio" FontSize="Medium" />
        <Entry Placeholder="Ingresa el precio del auto" Text="{Binding Precio}" Keyboard="Numeric" />

        <Button Text="Registrar Auto"
                Command="{Binding RegistrarAutoCommand}" />
    </StackLayout>

</ContentPage>